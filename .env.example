# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost/deli
SQLALCHEMY_DATABASE_URI=postgresql://postgres:password@localhost/deli

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Email Configuration (Gmail SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# Alternative Email Providers
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Flask Configuration
FLASK_ENV=development
FLASK_APP=server/app.py
FLASK_DEBUG=true

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:3000

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/deliveroo.log

# Security Configuration
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# SMS Configuration (Twilio - optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Push Notification Configuration (Firebase - optional)
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_SENDER_ID=your-firebase-sender-id

# Payment Configuration (Stripe - for future implementation)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Monitoring and Analytics (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Development/Testing
TESTING=false
DEBUG_TOOLBAR=false